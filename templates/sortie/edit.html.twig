{% extends 'base.html.twig' %}

{% block title %}Modifier une sortie{% endblock %}

{% block body %}
    <h1>Modifier une sortie</h1>

    {{ form_start(form) }}
    {{ form_row(form.nom) }}
    {{ form_row(form.dateHeureDebut) }}
    {{ form_row(form.dateLimiteInscription) }}
    {{ form_row(form.nbrePlacesMax) }}
    {{ form_row(form.duree) }}
    {{ form_row(form.description) }}
    {{ form_row(form.villes) }}
    {{ form_row(form.lieu) }}
    {{ form_widget(form.modifAnnul,  { 'attr' : { 'style':'display:none'} }) }}
    <div>
        Rue:<br>
        Code postal:<br>
        Latitude:<br>
        Longitude:
    </div>
    {{ form_row(form.enregistrer) }}
    {{ form_row(form.publier) }}
    {{ form_row(form.supprimer) }}
    {{ form_row(form.annuler) }}


    {{ form_end(form) }}


{% endblock %}
