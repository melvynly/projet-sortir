{% extends 'template.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>Mon profil</h1>

    <table class="table">
        <tbody>
            <tr>
                <td><img src="{{ asset('images/' ~ user.getPhoto()) }}" alt="ma photo"></td>
                <th>
                    <h1>{{ user.pseudo }}</h1>
                </th>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ user.prenom }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ user.telephone }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ user.mail }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('accueil') }}" class="button">Retour</a>

{% endblock %}
